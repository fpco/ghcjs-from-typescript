  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             definitely-typed.hs
  ghc-options:         -Wall
  build-depends:       base == 4.*
                     , filepath
                     , directory
                     , ghcjs-from-typescript
