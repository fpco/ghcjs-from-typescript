build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  exposed-modules:     GHCJS.FromTypeScript.Util
                       GHCJS.FromTypeScript.Types
                       GHCJS.FromTypeScript.Collect
                       GHCJS.FromTypeScript.Munge
                       GHCJS.FromTypeScript.Render
                       GHCJS.FromTypeScript
